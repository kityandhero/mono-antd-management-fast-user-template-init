import { getValueByKey } from 'easy-soft-utility';

import { actionCore } from 'antd-management-fast-common';

import { modelTypeCollection } from '../../../../modelBuilders';
import { fieldData } from '../Common/data';

export async function setEnableAction({
  target,
  handleData,
  successCallback,
  successMessage,
}) {
  actionCore({
    api: modelTypeCollection.<%= o.model%>TypeCollection.setEnable,
    params: {
      <%= o.key%>: getValueByKey({
        data: handleData,
        key: fieldData.<%= o.key%>.name,
      }),
    },
    target,
    handleData,
    successCallback,
    successMessage,
  });
}

